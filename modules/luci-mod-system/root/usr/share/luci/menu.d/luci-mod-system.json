			"acl": [ "luci-mod-system-config", "luci-mod-system-ssh" ]
		}
	},

	"admin/system/admin/password": {
		"title": "Router Password",
		"order": 1,
		"action": {
			"type": "view",
			"path": "system/password"
		},
		"depends": {
			"acl": [ "luci-mod-system-config" ]
		}
	},

