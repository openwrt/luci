				{
					"value": "dns",
					"description": "Default (Blocks ads and trackers)"
				},
				{
					"value": "unfiltered",
					"description": "Unfiltered"
				},
				{
					"value": "family",
					"description": "Family Filter"
				}
			],
			"default": "dns"
		}
	}
}
